= content header
  ul
    li
      a href="/"
        h1
          img src="/img/endian-logo.svg"
          span endian
          span.section articles

= content main
  h2.title {{.Title}}
  p.byline Roughly {{.FuzzyWordCount}} words, or about a {{.ReadingTime}} minute read

  {{ if and (gt .FuzzyWordCount 2000 ) (.TableOfContents) }}
  h3 Table of contents
  {{.TableOfContents}}
  {{end}}

  #body {{.Content}}
