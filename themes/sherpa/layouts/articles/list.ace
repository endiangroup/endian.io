= content header
  ul
    li
      h1
        img src="/img/endian-logo.svg"
        a href="/" endian
        span.section
          a href="/articles" articles

= content main
  ul#articles
    {{ range .Pages }}
    li
      a href="{{.Permalink}}"
        h2 {{.Title}}
      p.byline {{.Param "authors"}}.  Roughly {{.FuzzyWordCount}} words, or about a {{.ReadingTime}} minute read
      p.summary {{.Param "summary"}}
      a.read href="{{.Permalink}}" Read more &raquo;
    {{ end }}
