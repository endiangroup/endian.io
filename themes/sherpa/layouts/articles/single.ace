= content header
  ul
    li
      h1
        img src="/img/endian-logo.svg"
        a href="/" endian
        span.section
          a href="/articles" articles

= content main
  h2.title {{.Title}}
  p.byline Roughly {{.FuzzyWordCount}} words, or about a {{.ReadingTime}} minute read

  {{ if and (gt .FuzzyWordCount 1000 ) (.TableOfContents) }}
  h3 Table of contents
  {{.TableOfContents}}
  {{end}}

  #body {{.Content}}
